@model AvailableMiscellaneous
<div class="row">
    <div class="col-lg-12">
        @{
            Html.DevExpress().ComboBoxFor(m => m.AvailableCourseId, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "AvailableCourse";
                settings.Properties.ValueField = "Id";
                settings.Properties.TextField = "AvailableCourse";
            })
                .BindList(new UnitOfWork().AvailableCoursesRepo.Get()).GetHtml();
        }
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @{
            Html.DevExpress().ComboBoxFor(m => m.MiscellaneousId, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "MiscellaneousName";
                settings.Properties.ValueField = "Id";
                settings.Properties.TextField = "MiscellaneousName";
            })
                .BindList(new UnitOfWork().MiscellaneousRepo.Get())
                .GetHtml();
        }
    </div>
</div>

<div class="row margin-top-10">
    <div class="col-lg-12 col-md-12 ">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSubmit";
                settings.Text = "Submit";
                settings.ClientSideEvents.Click = "function(s,e){AvailableMiscellaneousGridView.UpdateEdit()}";

            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ControlStyle.CssClass = "margin-left-10";
                settings.ClientSideEvents.Click = "function(s,e){AvailableMiscellaneousGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>