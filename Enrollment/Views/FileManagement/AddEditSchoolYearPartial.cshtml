
@model SchoolYears
<div class="row">
    <div class="col-lg-6">
        @{
            Html.DevExpress().ComboBoxFor(m => m.SemesterId, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Semester";
                settings.Properties.ValueField = "Id";
                settings.Properties.TextField = "Semester";
            })
                .BindList(new UnitOfWork().SemestersRepo.Get()).GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        @{
            Html.DevExpress().TextBoxFor(m => m.SchoolYear, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "School Year";
            })
                .GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        @{
            Html.DevExpress().DateEditFor(m => m.StartDate, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Start Date";
            })
                .GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        @{
            Html.DevExpress().DateEditFor(m => m.EndDate, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "End Date";
            })
                .GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        @{
            Html.DevExpress().CheckBoxFor(m => m.IsActive, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Is Active";
            })
                .GetHtml();
        }
    </div>
</div>
<div class="row margin-top-10">
    <div class="col-lg-12 col-md-12 ">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSubmit";
                settings.Text = "Submit";
                settings.ClientSideEvents.Click = "function(s,e){SchoolYearsGridView.UpdateEdit()}";

            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ControlStyle.CssClass = "margin-left-10";
                settings.ClientSideEvents.Click = "function(s,e){SchoolYearsGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>