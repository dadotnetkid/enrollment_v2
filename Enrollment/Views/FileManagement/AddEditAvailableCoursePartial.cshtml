@model AvailableCourses
<div class="row">
    <div class="col-lg-12">
        @{
            Html.DevExpress().ComboBoxFor(m => m.CourseId, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Course";
                settings.Properties.ValueField = "Id";
                settings.Properties.TextField= "Course";
            })
                .BindList(new UnitOfWork().CoursesRepo.Get())
                .GetHtml();
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @{
            Html.DevExpress().ComboBoxFor(m => m.SchoolYearId, settings =>
            {
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "School Year";
                settings.Properties.ValueField = "Id";
                settings.Properties.TextField= "SchoolYearAndSemester";
            })
                .BindList(new UnitOfWork().SchoolYearsRepo.Get()).GetHtml();
        }
    </div>
</div>

<div class="row margin-top-10">
    <div class="col-lg-12 col-md-12 ">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSubmit";
                settings.Text = "Submit";
                settings.ClientSideEvents.Click = "function(s,e){AvailableCourseGridView.UpdateEdit()}";

            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ControlStyle.CssClass = "margin-left-10";
                settings.ClientSideEvents.Click = "function(s,e){AvailableCourseGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>