@model UserRoles
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().TextBoxFor(m => m.Name, settings =>
            {
                settings.Properties.NullText = "User Role Name";
                settings.Width = Unit.Percentage(100);
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Left;
                settings.Properties.Caption = "User Role Name";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>

</div>

<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.DevExpress().MemoFor(m => m.Description, settings =>
            {
                settings.Properties.NullText = "Description";
                settings.Width = Unit.Percentage(100);
                settings.Properties.CaptionSettings.Position = EditorCaptionPosition.Left;
                settings.Properties.Caption = "Description";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>

</div>
<div class="row">
    <div class="col-md-12 col-lg-12">
        @{
            Html.RenderAction("TokenboxActionsPartial", new {roleId = Model?.Id, userRolesInActions = Model?.UserRolesInActions});
        }
    </div>

</div>

<div class="row margin-top-10">
    <div class="col-lg-12 col-md-12 ">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSubmit";
                settings.Text = "Submit";
                settings.ClientSideEvents.Click = "function(s,e){UserRolesGridView.UpdateEdit()}";
            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ControlStyle.CssClass = "margin-left-10";
                settings.ClientSideEvents.Click = "function(s,e){UserRolesGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>
