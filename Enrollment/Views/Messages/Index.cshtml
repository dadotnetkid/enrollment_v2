<script>
    $(document).ready(function(s) {
        getMessageCount();
        selectFolder("Inbox");
    });
    var mode;
    function selectFolder(mode) {

        $.ajax({
            url: "@Url.Action("MessageGridViewPartial")",
            data: { mode: mode },
            success: function (e) {
                $('#message-container').html(e);

            }
        })

        $('#mode').html(mode);
    }
    function addNewRow() {
        MessageGridView.AddNewRow();
    }
    function refresh() {
        MessageGridView.PerformCallback({ mode: mode });
        getMessageCount();

    }

    function GridSelectionChanged(s, e) {

        if (s.GetSelectedRowCount() >= 0) {
            s.GetRowValues(s.GetFocusedRowIndex(), 'Id', GetSelectedRows);
        }

    }

    var Id;
    function GetSelectedRows(values) {

        Id = values;
        viewMessage(values);
        getMessageCount();

        console.log(Id);
    }
    function getMessageCount() {
        showLoading();
        $.ajax({
            url: '@Url.Action("GetMessageCount", "Messages")',
            success: function(e) {
                $('#sent').html(e.Sent);
                $('#inbox').html(e.Inbox);
                console.log(e);
                hideLoading();
            }
        });
    }

</script>
<div id="message-detail-container-popup"></div>
<script>

    function viewMessage(id) {
        showLoading();
        $.ajax({
            url: '@Url.Action("PopupMessagePartial","Messages")',
            data: { messageId: id },
            success: function(e) {
                $('#message-detail-container-popup').html(e);
                hideLoading();
            }
        });

    }
</script>


