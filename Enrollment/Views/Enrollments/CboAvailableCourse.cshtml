@model Enrollments
@{
    Html.DevExpress().ComboBoxFor(m => m.AvailableCourseId, settings =>
       {
           settings.Width = Unit.Percentage(100);
           settings.Properties.Caption = "Available Course";
           settings.Properties.ValueField = "Id";
           settings.Properties.TextField = "Courses.Course";
           settings.Properties.ClientSideEvents.ValueChanged = "function(s,e){populateSubjects(s.GetValue())}";
           settings.CallbackRouteValues = new { controller = "Enrollments", Action = "CboAvailableCourse" };
       })
        .BindList(ViewBag.Courses)
        .GetHtml();
}



